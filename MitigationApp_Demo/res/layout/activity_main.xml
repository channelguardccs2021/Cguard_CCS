<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="3dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DMC Control"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="13pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:drawableLeft="@android:drawable/presence_invisible"
        android:text="Main Channel(Amazon_MQTT)"
        android:textSize="9pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:onClick="bindClick"
            android:text="BIND" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:onClick="disconnectClick"
            android:text="RESET" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Light Control"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="13pt"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff888888"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="turnonClick"
            android:text="ON" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="turnoffClick"
            android:text="OFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textSize="8pt"
            android:layout_marginTop="3dp"
            android:text="Status of Light" />
    </LinearLayout>

</LinearLayout>